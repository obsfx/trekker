{
  "name": "trekker-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev:cli": "bun run --cwd packages/cli dev",
    "dev:webapp": "bun run --cwd packages/webapp dev",
    "build:cli": "bun run --cwd packages/cli build",
    "build:webapp": "bun run --cwd packages/webapp build",
    "build:release": "bun run scripts/build-release.ts",
    "release:patch": "bun run scripts/build-release.ts patch",
    "release:minor": "bun run scripts/build-release.ts minor",
    "release:major": "bun run scripts/build-release.ts major"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
