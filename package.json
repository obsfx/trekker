{
  "name": "@obsfx/trekker",
  "version": "1.7.0",
  "description": "A CLI-based issue tracker built for AI coding agents. Stores tasks, epics, and dependencies in a local SQLite database.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "trekker": "./bin/trekker.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "release:patch": "npm version patch && npm run build && npm publish --access public",
    "release:minor": "npm version minor && npm run build && npm publish --access public",
    "release:major": "npm version major && npm run build && npm publish --access public"
  },
  "keywords": [
    "cli",
    "issue-tracker",
    "task-management",
    "sqlite",
    "ai-agents",
    "coding-agents",
    "project-management",
    "todo",
    "epic",
    "node"
  ],
  "author": "Omercan Balandi <balandiomer@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/obsfx/trekker",
  "repository": {
    "type": "git",
    "url": "https://github.com/obsfx/trekker.git"
  },
  "bugs": {
    "url": "https://github.com/obsfx/trekker/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@toon-format/toon": "^2.1.0",
    "commander": "^13.1.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.38.4",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/sql.js": "^1.4.9",
    "drizzle-kit": "^0.30.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0"
  }
}
